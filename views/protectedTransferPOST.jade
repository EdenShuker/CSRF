extends layout

block content
  .container
    if (user)
      h1 Protected Bank Transfer
        h4 Hello #{user.username}
        p.lead Fill all fields for transfer your money
        br
        form(role='form', action="/transfer-protected/post/money", method="post", style='max-width: 300px;')
          .form-group
            input.form-control(type='hidden', name='csrfToken', value=user.csrfToken)
          .form-group
            input.form-control(type='text', name="amount", placeholder='amount of money')
          .form-group
            input.form-control(type='text', name="accountNum", placeholder='destination account number')
          button.btn.btn-default(type='submit') Submit
    else
      h1 Not Allowed
        p.lead need to login first
        br
        a(href="/login") Login
